  .notieInfo {
     min-height: calc(100vh - 207px);
     background: #F8FBFF;
     color: $base-font-color;
     .notie-main {
      width 1200px;
      margin  0 auto;
      padding-top:20px;
        .article-head{
             width:100%;
             height:70px;
             line-height:70px;
             background:#fff;
             font-side:26px;
             color:#000;
             margin-bottom:30px;
             text-indent:30px;
          }
        .notie-content{
          width:670px;
          float:right;
          margin:0 0 20px 0;
          background :#fff;
          padding:35px 70px;
          min-height: 600px;
          .time {
            padding:0 0 10px;
            color:$gray-font-color;
          }
           h2{
             font-size:20px;
             padding-bottom:6px;
             margin-bottom:15px;
             line-height:30px;
             // border-bottom:1px solid $explain-font-color;
           }
           .const{
             line-height:26px;
              word-wrap: break-word !important;
              word-break: normal !important;
            p{
              padding-bottom:10px;
              word-wrap: break-word !important;
              word-break: normal !important;
            }
           }
        }
        .notie-side {
          float:left;
          margin-right:35px;
          width:350px;
          padding:10px 0 38px 0;
          background:#fff;
          border-radius:4px;
           li {
              height:40px;
              line-height:40px;
              cursor: pointer;
            }
            li.active {
              color:#2b89e1;
              border:none;
            }
            li:hover {
              // text-decoration: underline;
            }
           .notice-list{
            li{
              margin:5px 0;
              height:30px;
              line-height:30px;
              position:relative;
              cursor: pointer;
              padding-left:20px;
              overflow:hidden;
              padding-right:30px;
              color:#555;
              &:before{
                content:'';
                position:absolute;
                line-height:0;
                overflow:hidden;
                width:0;
                height:0;
                border:1px solid #eee;
                top:50%;
                left:10px;
                border-radius:50%;
              }
              &.active {
                color:#2b89e1;
                // border-bottom:1px solid $base-font-color;
                display:inline-block;
                font-size:14px;
                &:before{
                  border:1px solid #5D3502;
                  opacity:0.7;
                }
              }
            }
           }
        }
     }
     .page{
         color:#5D3502;
         border-top:1px solid #eee;
         margin-top:20px;
     }
  }