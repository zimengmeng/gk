.question{
  width:100%;
  height:100%;
	background:#F8FBFF;
  .ques-main {
      min-height: calc(100vh - 207px);
      background:#F8FBFF;
      color: $base-font-color;
      .ques-main-content {
          width: 1200px;
          margin: 0 auto;
          background:#fff;
          border-radius:4px;
          min-height:400px;
          .ques-tag {
            height: 70px;
            line-height: 70px;
            overflow: hidden;
            border-top: 30px solid #F8FBFF;
            border-bottom: 30px solid #F8FBFF;
            padding-left: 24px;
            .tab_switch {
              border-bottom: 2px solid #5F3801 ;
              color: #5F3801 ;
            }
            li {
              display: inline-block;
              float: left;
              display: inline-block;
              margin: 0 25px;
              font-size: 24px;
              cursor: pointer;
              float: left;
              height: 68px;
              color:#000;
            }
          }
        .ques-wrap {
          text-align: center;
        }

        // 发起提问
        .ques {
          text-align: center;
          display:none;
          border-box:box-sizing;
          padding:30px 40px;
          .chios {
            display: inline-block;
            width: 100%;
            margin-bottom: 30px;
            .wgt-inlineInput{
                width:100%;
                height:60px;
                .select-input{
                  width:100%;
                  height:100%;
                  input{
                    width:100%;
                    height:100%;
                    text-indent:20px;
                    background:#F8FBFF;
                    border:none;
                    cursor:pointer;
                  }
                  input::-webkit-input-placeholder { 
                      color: #000;
                    }
                  .optionBox {
                    width:300px;
                    top:60px;
                    .select-option-box{
                      width:300px;
                      li{
                        width:100%;
                        height: 30px;
                        line-height 30px;
                        text-indent:20px;
                        &:hover{
                          width:100%;
                          background:#fff;
                          color: #663902;
                          background-color:#FDDB1A;
                        }
                    }
                    .current {
                      width:100%;
                      color: #000;
                      cursor: pointer;
                      background-color:#FFF;
                      }
                    }
                  }
                }
                .icon-down{
                  top:40%;
                  right:3%;
                }
              }
          }
          .warrel {
              width: 100%;
              height: 350px;
              textarea {
                width: 100%;
                height: 350px;
                line-height: 30px;
                border-radius: 2px;
                background:#F8FBFF;
                padding:0;
                border:none;
                text-indent:10px;
                font-size:14px;
            }
          }
          .upfile {
            margin-top: 20px;
            font-size: 12px;
            display:flex;
            span {
              text-align: left;
              display: inline-block;
              width:240px;
              height:60px;
              line-height:60px;
              font-size: 14px;
              position: relative;
              border-radius: 2px;
              margin-right: 20px;
              background:#FDDB1A;
              color:#623A06;
              text-align:center;
            }
            i{
              display:block;
              line-height:60px;
            }
            input {
              display: inline-block;
              opacity: 0;
              height: 20px;
              position: absolute;
              top: 0;
              left: 0;
            }
          }
          button {
            width: 300px;
            font-size: 16px;
            height: 60px;
            line-height: 60px;
            border-radius: 2px;
            margin: 50px 0 40px 0;
            background:#FDDB1A;
            color:#603604;
          }
        }
          /* 问题列表 */
        .ques-list {
          display: none;
          text-align:center;
          .loading{
                height:30px;
                width:30px;
                margin :10% auto;
          }
          .list {
            padding: 20px;
            .record{
              line-height:55px;
              font-size:14px;
              line-height:400px;
            }
            .list-table {
              width: 100%;

              thead {
                font-size: 12px;

                th {
                  padding: 10px;
                }
              }

              tbody {
                td {
                padding: 10px;
              }
              .content{
                text-align:left;
                max-width: 500px;
                overflow: hidden;
                white-space: nowrap;
                text-overflow: ellipsis;
              }
              }
              .state {
                font-size: 12px;
                cursor: pointer;
                color: $blue-font-color;
                span {
                  margin-right: 10px;
                }
              }
            }
          }
    }
          .exhibition{
          display:block;  
        }
    }
  }
}