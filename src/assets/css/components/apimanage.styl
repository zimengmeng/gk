.api{
  width:100%;
  height:100%;
  background:#F8FBFF;
  .api-main {
  min-height: calc(100vh - 377px);
  background:#F8FBFF;
  color:$base-font-color
  .api-main-content {
    width: 1200px;
    margin: 0 auto;
    padding: 40px 0 0;
    border-radius: 2px;
    background:#F8FBFF;
    margin-bottom:20px;
    min-height:400px;
    h1{
      width:100%;
      height:70px;
      line-height:70px;
      background:#fff;
      color:#000;
      text-indent:54px;
      font-size:30px;
    }
  }
}
.api-tab {
  width: 100%;
  height: 60px;
  line-height: 60px;
  overflow: hidden;
  border-bottom: 1px solid $base-background-color;
  padding-left: 24px;
   li {
  display: inline-block;
  margin: 0 25px;
  font-size: 16px;
  cursor: pointer;
  float: left;
}
  .selected {
    color: $blue-font-color;
    height: 59px;
    border-bottom: 1px solid $blue-font-color;
  }
}
}