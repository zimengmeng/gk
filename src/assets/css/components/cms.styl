  .cms {
    min-height: calc(100vh - 207px);
    background: #F8FBFF;
    color: $base-font-color;
    .cms-main {
      width 1200px;
      margin  0 auto;
      padding-top:20px;
      margin-bottom:20px;
      background: #F8FBFF;
      .aside{
        width:220px;
        float: left;
        margin-right:20px;
        background:#fff;
        border-radius:4px;
        .aside-menu {
          li{
            line-height:20px;
            font-size:14px;
            padding:10px 10px 10px 30px;
            cursor: pointer;
            border-bottom:1px solid #555;
            word-break: break-all;
            color:#555;
          }
          li:last-child{
            border-bottom:0;
          }
          .color, li:hover{
            color:#2b89e1;
            }
        }
      }
      }
      .cms-content{
        padding:30px 45px;
        width:870px;
        border-radius:4px;
        background:#fff;
        float :left;
        min-height:500px;
         h2{
           margin:20px 0;
           font-size:16px;
           padding-bottom:10px;
           border-bottom:1px solid $gray-font-color
         }
         .title{
           color:$gray-font-color
         }
        p{
          line-height:20px;
          a{
            img{
              width: 160px;
              height:50px;
            }
          }
          img{
            width: 100%;
            height: 100%;
          }
        }
        ul {
          li{
            line-height:20px;
          }
        }
        h6{
          line-height:20px;
        }
        }
  }