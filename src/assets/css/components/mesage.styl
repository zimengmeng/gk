  .mesage {
    min-height: calc(100vh - 207px);
    color: $base-font-color;
    background: #F8FBFF;
    box-sizing:border-box;
    padding:30px 0 0 0;
    .mes-main{
    width: 1200px;
    margin: 0 auto;
    background: #fff;
      .mes-slide {
        width:220px;
        float:left;
        background:#fff;
        border-radius:4px;
        ul {
          .active{
            color: $blue-font-color;
            }
           li {
             cursor:pointer;
             width:160px;
             height:60px;
             background:#F8FBFF;
             line-height: 60px;
             margin-left:60px;
             text-align:center;
             margin-top:10px;
             border:none;
             font-size: 14px;
           }
          .active{
             color :#785734;
          }
          li:hover{
            color :#785734;
          } 
          li:last-child{
            border-bottom:0
          }
        }
        }
        .mes-content{
          width: 960px;
          float: left;
          background:#fff;
          margin-left 20px;
          border-radius:4px;
          min-height:600px;
          .loading{
            width:30px;
            height:30px;
            margin:20% auto;
          }
            .con-head{
                line-height:60px;
                border-bottom:1px solid #E2E2E2;
                h6 {
                  padding-left:30px;
                  font-size:18px;
                }
              }
            .mode-he{
              height:40px;
              line-height:40px;
              border-bottom: 1px solid #E2E2E2;
              label {
                float:left;
                margin: 0 40px 0 20px;
                .checkAll {
                 float: left;
                 width:13px;
                 height:13px;
                 margin:15px 5px 0 0 ;
               }
              }
              .reade {
                float:right;
                margin-right:20px;
                cursor: pointer;
                i{
                  cursor:pointer;
                  margin-left:20px;
                  color:#FDDC1B
                }
                &:hover{
                  color :#785734;
                }
              }
               
            }
            .record {
              line-height:70px;
              text-align:center;
            }
            .mes-body {
               li {
                 padding:15px 0 ;
                 border-bottom: 1px solid $table-border-color;

                 label {
                    float:left;
                    margin-right:10px
                    .checkbox{
                        float: left;
                        width:13px;
                        margin:2px 5px 0 0 ;
                        margin-left:20px
                        height:15px
                   }
                      span {
                        font-size:14px
                      }
                 }
                 em {
                   margin-left:10px;
                     white-space: nowrap;
                 }
                 span{
                   display:inline-block
                   max-width:650px;
                   word-wrap: break-word !important;
                   word-break: break-all !important;
                   line-height:15px
                   float:left;
                 }
                 .mess{
                   float:left;
                   max-width:650px;
                   cursor: pointer;
                   overflow: hidden;
                   white-space: nowrap;
                   text-overflow: ellipsis;
                }
                .tiveRad{
                  color: $gray-font-color
                  }
                .option {
                 float:right;
                 margin-right:20px;
                   .delete{
                     cursor: pointer;
                     margin-left:20px;
                     color: $blue-font-color 
                    } 
                }
               } 
               li:last-child{
                   border-bottom:0
               }
            }
          }
      }
  }